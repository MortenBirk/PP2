<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pp2.starlords.pp2.OldAPIActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_GPS_off"
        android:id="@+id/btn_GPS"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_GPS"
        android:text="@string/btn_Network_off"
        android:id="@+id/btn_network"/>
    <TextView
        android:text="@string/hello_world"
        android:id="@+id/txt_GPS_latitude"
        android:layout_below="@+id/btn_GPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/hello_world"
        android:id="@+id/txt_GPS_longitude"
        android:layout_below="@+id/txt_GPS_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/hello_world"
        android:id="@+id/txt_Network_latitude"
        android:layout_below="@+id/btn_network"
        android:layout_alignLeft="@+id/btn_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/hello_world"
        android:id="@+id/txt_Network_longitude"
        android:layout_below="@+id/txt_Network_latitude"
        android:layout_alignLeft="@+id/txt_Network_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
