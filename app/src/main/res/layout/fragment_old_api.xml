
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_GPS"
        android:onClick="chooseGps"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_GPS"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_Wifi"
        android:onClick="chooseWifi"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_Wifi"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_button"
        android:onClick="logLocation"
        android:layout_gravity="center_horizontal"
        android:id="@+id/old_log"
        android:layout_below="@+id/btn_GPS"
        android:layout_alignParentStart="true" />

</RelativeLayout>